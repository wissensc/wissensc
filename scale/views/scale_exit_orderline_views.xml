<?xml version="1.0"?>
<odoo>

    <record id="scale_exit_orderline_view_form" model="ir.ui.view">
        <field name="name">Scale Exit Orderline Form</field>
        <field name="model">scale.exit.orderline</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="id_line"/>
                            <field name="name"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="net_weight"/>
                            <field name="tare_weight"/>
                            <field name="gross_weight"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="scale_exit_orderline_view_tree" model="ir.ui.view">
        <field name="name">Scale Exit Orderline Tree</field>
        <field name="model">scale.exit.orderline</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="scale_exit_orderline_model_action" model="ir.actions.act_window">
        <field name="name">LÃ­neas de pedido</field>
        <field name="res_model">scale.exit.orderline</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
