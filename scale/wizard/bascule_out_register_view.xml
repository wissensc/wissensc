<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bascule_exit_register_view_form" model="ir.ui.view">
            <field name="name">bascule.exit.register.form</field>
            <field name="model">bascule.exit.register</field>
            <field name="arch" type="xml">
                <form string="Reverse Journal Entry">
                    <field name="id"/>
                    <footer>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_wizard_bascule_exit_register"
                    name="Registrar pesos"
                    res_model="bascule.exit.register"
                    view_mode="form" target="new"/>

    </data>
</odoo>